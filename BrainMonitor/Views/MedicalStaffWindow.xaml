                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 头像区域 -->
                <Border Grid.Column="0" 
                    Width="60" Height="60"
                    CornerRadius="45"
                    Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                    VerticalAlignment="Center"
                    Margin="0,0,25,0">
                    <ui:FontIcon Glyph="&#xE77B;"
                        FontSize="45"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource SystemControlForegroundChromeWhiteBrush}" />
                </Border>

                <!-- 信息区域 -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="StaffNameText"
                        Text="未登录"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                        Margin="0,0,0,6" />
                    <TextBlock x:Name="StaffIdText"
                        Text="工号: --"
                        FontSize="15"
                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    <TextBlock x:Name="StaffDepartmentText"
                        Text=""
                        FontSize="15"
                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        Visibility="Collapsed" />
                </StackPanel>

                <!-- 操作按钮区域 -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal">
                    <Button x:Name="StaffLoginRegisterButton"
                        Content="注册/登录"
                        Style="{StaticResource ModernButton}"
                        Width="110"
                        Height="40"
                        Margin="15,0,0,0"
                        Click="StaffLoginRegisterButton_Click" />
                    <Button x:Name="LogoutButton"
                        Content="退出登录"
                        Style="{StaticResource SecondaryButton}"
                        Width="110"
                        Height="40"
                        Margin="15,0,0,0"
                        Click="LogoutButton_Click"
                        Visibility="Collapsed" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- 现代化分割线 1 -->
        <Border Grid.Row="0" VerticalAlignment="Bottom" Height="2" Margin="0,0,0,-10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.1"/>
