<Window x:Class="BrainMirror.Views.ModernMessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="提示"
        Width="400"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#01000000"
        ShowInTaskbar="False">
    
    <Grid>
        <!-- 弹窗内容 -->
        <Border Margin="10"
                Background="White"
                BorderBrush="#0078D4"
                BorderThickness="2"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#0078D4" 
                                  Direction="0" 
                                  ShadowDepth="0" 
                                  BlurRadius="8"
                                  Opacity="0.3"/>
            </Border.Effect>
            <Grid Margin="20,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 图标和标题 -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,12">
                    <ui:FontIcon x:Name="MessageIcon"
                                 Glyph="&#xE946;"
                                 FontSize="24"
                                 Margin="0,0,10,0"
                                 Foreground="#0078D4"/>
                    <TextBlock x:Name="TitleText"
                               Text="提示"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="#0078D4"
                               Margin="0"/>
                </StackPanel>
                
                <!-- 消息内容 -->
                <TextBlock x:Name="MessageText"
                           Grid.Row="1"
                           Text="消息内容"
                           FontSize="14"
                           LineHeight="20"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                
                <!-- 按钮区域 -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button x:Name="OkButton"
                            Content="确定"
                            Style="{DynamicResource AccentButtonStyle}"
                            Width="80"
                            Height="32"
                            FontSize="13"
                            FontWeight="Medium"
                            Click="OkButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
