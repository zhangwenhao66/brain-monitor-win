<Window x:Class="BrainMonitor.Views.ReportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="报告界面" Height="800" Width="800"
    WindowStartupLocation="CenterScreen"
    Background="#FAFAFA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <!-- 主标题 -->
        <TextBlock Text="大脑认知健康报告"
            FontSize="24"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,0,0,15"
            Grid.Row="0" />

        <!-- 用户信息 -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="1">
            <TextBlock Text="ID姓名: 张三  性别: 男  年龄: 40"
                FontSize="14"
                FontWeight="Medium" />
        </Border>

        <!-- 关键指标卡片 -->
        <Grid Grid.Row="2" Margin="0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- AD风险评估卡片 -->
            <Border Style="{StaticResource CardStyle}" Grid.Column="0" Margin="0,0,10,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Ellipse Width="20" Height="20" Fill="#FFC107" Margin="0,0,8,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="1" Opacity="0.3" />
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="AD风险评估"
                            FontSize="16"
                            FontWeight="Bold" />
                    </StackPanel>

                    <TextBlock Text="35%"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#2196F3"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,8" />

                    <TextBlock Text="中等风险"
                        FontSize="12"
                        Foreground="#FF9800"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10" />

                    <!-- 进度条 -->
                    <Border Height="6"
                        Background="#E0E0E0"
                        CornerRadius="3">
                        <Border Width="140"
                            Background="#4CAF50"
                            CornerRadius="3" />
                    </Border>
                </StackPanel>
            </Border>

            <!-- 大脑年龄卡片 -->
            <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="10,0,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Ellipse Width="20" Height="20" Fill="#2196F3" Margin="0,0,8,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="1" Opacity="0.3" />
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="大脑年龄"
                            FontSize="16"
                            FontWeight="Bold" />
                    </StackPanel>

                    <TextBlock Text="45岁"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#2196F3"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,8" />

                    <TextBlock Text="高于实际年龄5岁"
                        FontSize="12"
                        Foreground="#666666"
                        HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- 脑电波图和解读 -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="3">
            <StackPanel>
                <TextBlock Text="终版脑电波图"
                    FontSize="16"
                    FontWeight="Bold"
                    Margin="0,0,0,8" />

                <TextBlock Text="(显示相关的3条,并对比标准值)"
                    FontSize="11"
                    Foreground="#666666"
                    Margin="0,0,0,10" />

                <!-- 脑电波图显示区域 -->
                <Border Height="120"
                    Background="#F5F5F5"
                    CornerRadius="6"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15">
                    <Canvas x:Name="BrainwaveReportCanvas">
                        <!-- 这里可以显示最终的脑电波图 -->
                        <TextBlock Text="脑电波图显示区域"
                            Foreground="#666666"
                            FontSize="14"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Canvas>
                </Border>

                <TextBlock Text="结果值解读:"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,0,8" />

                <TextBlock
                    Text="根据脑电波分析结果显示，受试者的认知功能处于正常范围，但存在轻微的认知功能下降趋势。建议定期进行认知功能监测，并采取相应的预防措施。MOCA量表得分25分，MMSE量表得分28分，均处于正常范围。"
                    TextWrapping="Wrap"
                    FontSize="12"
                    LineHeight="16"
                    Foreground="#333333" />

                <TextBlock Text="报告时间: 2024年1月15日 14:30"
                    FontSize="12"
                    FontWeight="Medium"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Right" />
            </StackPanel>
        </Border>

        <!-- 返回按钮 -->
        <Button Content="返回"
            Style="{StaticResource SecondaryButton}"
            Grid.Row="5"
            HorizontalAlignment="Left"
            Margin="0,20,0,0"
            Click="ReturnButton_Click" />
    </Grid>
</Window> 