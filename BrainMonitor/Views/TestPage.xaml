<UserControl x:Class="BrainMonitor.Views.TestPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 测试者信息标题 -->
        <TextBlock Grid.Row="0" 
            Text="测试者信息" 
            Style="{StaticResource TitleText}"
            FontSize="18"
            FontWeight="SemiBold"
            HorizontalAlignment="Center"
            Margin="0,0,0,10"/>
        
        <!-- 测试者信息区域 -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="姓名: " 
                    Style="{StaticResource ModernLabel}"
                    Margin="0,0,5,0"/>
                <TextBlock Text="{Binding CurrentTester.Name}" 
                    Style="{StaticResource ModernLabel}"
                    Margin="0,0,25,0"/>
                
                <TextBlock Text="手机号: " 
                    Style="{StaticResource ModernLabel}"
                    Margin="0,0,5,0"/>
                <TextBlock Text="{Binding CurrentTester.Phone}"
                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                    Style="{StaticResource ModernLabel}"
                    Margin="0,0,25,0"/>
                
                <TextBlock Text="性别: " 
                    Style="{StaticResource ModernLabel}"
                    Margin="0,0,5,0"/>
                <TextBlock Text="{Binding CurrentTester.Gender}" 
                    Style="{StaticResource ModernLabel}"
                    Margin="0,0,25,0"/>
                
                <TextBlock Text="年龄: " 
                    Style="{StaticResource ModernLabel}"
                    Margin="0,0,5,0"/>
                <TextBlock Text="{Binding CurrentTester.Age}" 
                    Style="{StaticResource ModernLabel}"/>
            </StackPanel>
        </Border>

        <!-- 现代化分割线 1 -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" Height="2" Margin="0,0,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.1"/>
                    <GradientStop Color="#FFA3C7E8" Offset="0.5"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.9"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- 设备连接区域 -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
            <StackPanel>
                
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左侧端口组 -->
                    <TextBlock Grid.Column="0" 
                        Text="端口:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" 
                        x:Name="PortComboBox" 
                        Style="{StaticResource ModernComboBox}" 
                        Height="35"
                        Width="100"
                        VerticalAlignment="Center"
                        Margin="0,0,15,0"
                        DropDownOpened="PortComboBox_DropDownOpened">
                    </ComboBox>
                    
                    <Button Grid.Column="2" 
                        x:Name="ScanDeviceButton"
                        Content="扫描设备" 
                        Style="{StaticResource ModernButton}" 
                        Width="100"
                        VerticalAlignment="Center"
                        Click="ScanDeviceButton_Click"/>
                    
                    <!-- 中间间隔 -->
                    <Border Grid.Column="3"/>
                    
                    <!-- 右侧设备组 -->
                    <TextBlock Grid.Column="4" 
                        Text="设备:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="5" 
                        x:Name="DeviceComboBox" 
                        Style="{StaticResource ModernComboBox}" 
                        Height="35"
                        Width="300"
                        VerticalAlignment="Center"
                        Margin="0,0,15,0"
                        IsEnabled="False"
                        SelectionChanged="DeviceComboBox_SelectionChanged">
                        <ComboBoxItem Content="设备1"/>
                        <ComboBoxItem Content="设备2"/>
                    </ComboBox>
                    
                    <Button Grid.Column="6" 
                        x:Name="ConnectDeviceButton"
                        Content="连接设备" 
                        Style="{StaticResource ModernButton}"
                        Width="100"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        Margin="0,0,10,0"
                        Click="ConnectDeviceButton_Click"/>
                    
                    <Button Grid.Column="7" 
                        x:Name="DisconnectDeviceButton"
                        Content="断开连接" 
                        Style="{StaticResource ModernButton}"
                        Width="100"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        Click="DisconnectDeviceButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- 现代化分割线 2 -->
        <Border Grid.Row="2" VerticalAlignment="Bottom" Height="2" Margin="0,0,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.1"/>
                    <GradientStop Color="#FFA3C7E8" Offset="0.5"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.9"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <!-- 实时脑电显示区域 -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
            <StackPanel>
                <!-- <TextBlock Text="实时脑电显示"  -->
                    <!-- Style="{StaticResource TitleText}" -->
                    <!-- FontSize="16"  -->
                    <!-- Margin="0,0,0,8"/> -->
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>   <!-- 图表区域 -->
                        <RowDefinition Height="30"/>  <!-- 横坐标标签区域 -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/> <!-- 左侧标签区域 -->
                        <ColumnDefinition Width="*"/>  <!-- 图表区域 -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- 纵坐标标签区域 -->
                    <Canvas x:Name="YAxisLabelsCanvas" 
                        Grid.Row="0"
                        Grid.Column="0"
                        MinHeight="300"
                        Background="Transparent"/>
                    
                    <!-- 脑电波图表区域 -->
                    <Border Grid.Row="0"
                        Grid.Column="1"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <Canvas x:Name="BrainwaveCanvas" 
                            MinHeight="300" />
                    </Border>
                    
                    <!-- 横坐标时间标签区域 -->
                    <Canvas x:Name="XAxisLabelsCanvas" 
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30"
                        Background="Transparent"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- 开始测试按钮区域 -->
        <StackPanel Grid.Row="4" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="0,0,0,10">
            
            <Button x:Name="StartTestButton"
                Style="{StaticResource ModernButton}"
                Width="120"
                Height="40"
                Click="StartTestButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE768;" 
                            FontSize="16" 
                            Margin="0,0,8,0"/>
                        <TextBlock Text="开始测试"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
        
        <!-- 横条分隔线 -->
        <Border Grid.Row="5" Height="2" Margin="20,5,20,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.1"/>
                    <GradientStop Color="#FFA3C7E8" Offset="0.5"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.9"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <!-- 评分输入区域 -->
        <Border Grid.Row="6" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
            <StackPanel>
                <!-- 评分输入区域 - 居中均匀排布 -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                        Text="MACA评分:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" 
                        x:Name="MacaScoreTextBox"
                        Style="{StaticResource ModernTextBox}" 
                        ui:ControlHelper.PlaceholderText="0-30分"
                        Height="35"/>
                    
                    <TextBlock Grid.Column="3" 
                        Text="MMSE评分:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <TextBox Grid.Column="4" 
                        x:Name="MmseScoreTextBox"
                        Style="{StaticResource ModernTextBox}" 
                        ui:ControlHelper.PlaceholderText="0-30分"
                        Height="35"/>
                    
                    <TextBlock Grid.Column="6" 
                        Text="握力值:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <TextBox Grid.Column="7" 
                        x:Name="GripStrengthTextBox"
                        Style="{StaticResource ModernTextBox}" 
                        ui:ControlHelper.PlaceholderText="单位：kg"
                        Height="35"/>
                </Grid>
                
                <!-- 现代化分割线 3 -->
                <Border Height="2" Margin="0,15,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="#FFB3D1F0" Offset="0.1"/>
                            <GradientStop Color="#FFA3C7E8" Offset="0.5"/>
                            <GradientStop Color="#FFB3D1F0" Offset="0.9"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- 操作按钮区域 -->
        <StackPanel Grid.Row="7" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="0,-2,0,15">
            
            <Button Style="{StaticResource SecondaryButton}"
                Width="120"
                Margin="0,0,15,0"
                Click="ReturnButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE72B;" 
                            FontSize="16" 
                            Margin="0,0,8,0"/>
                        <TextBlock Text="返回"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            
            <Button Style="{StaticResource ModernButton}"
                Width="120"
                Click="GetReportButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE8A5;" 
                            FontSize="16" 
                            Margin="0,0,8,0"/>
                        <TextBlock Text="生成报告"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>