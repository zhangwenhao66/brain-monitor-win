<Window x:Class="BrainMonitor.Views.TesterInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新增测试者界面" Height="800" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        

        
        <!-- 主要内容区域 -->
        <Border Style="{StaticResource CardStyle}" 
                Grid.Row="0"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="500">
            <StackPanel>
                <!-- ID/姓名输入 -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="(ID/姓名):" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="IdNameTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Height="40"/>
                </StackPanel>
                
                <!-- 手机号输入 -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="手机号:" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="PhoneTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Height="40"/>
                </StackPanel>
                
                <!-- 性别选择 -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="性别:" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="GenderComboBox" 
                              Style="{StaticResource ModernComboBox}"
                              Height="40">
                        <ComboBoxItem Content="男"/>
                        <ComboBoxItem Content="女"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- 年龄输入 -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="年龄:" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="AgeTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Height="40"/>
                </StackPanel>
                
                <!-- 隐私协议复选框 -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            Margin="0,0,0,30">
                    <CheckBox x:Name="PrivacyCheckBox" 
                              IsChecked="True" 
                              VerticalAlignment="Center" 
                              Margin="0,0,8,0"/>
                    <TextBlock Text="数据隐私等协议" 
                               FontSize="14" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- 按钮区域 -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,20,0,0">
                    <Button Content="返回" 
                            Style="{StaticResource SecondaryButton}"
                            Width="120"
                            Height="45"
                            Margin="0,0,20,0"
                            Click="ReturnButton_Click"/>
                    <Button Content="确定" 
                            Style="{StaticResource ModernButton}"
                            Width="120"
                            Height="45"
                            Click="ConfirmButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        

    </Grid>
</Window> 