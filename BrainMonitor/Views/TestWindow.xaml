<Window x:Class="BrainMonitor.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="测试界面" Height="800" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 测试者信息显示区域 -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="ID: " FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentTester.ID}" Margin="0,0,20,0"/>
                <TextBlock Text="姓名: " FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentTester.Name}" Margin="0,0,20,0"/>
                <TextBlock Text="性别: " FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentTester.Gender}" Margin="0,0,20,0"/>
                <TextBlock Text="手机号: " FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentTester.Phone}"/>
            </StackPanel>
        </Border>

        <!-- 设备连接区域 -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="1">
            <StackPanel>
                <TextBlock Text="设备连接" 
                           FontSize="16" 
                           FontWeight="Medium" 
                           Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="端口:" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               VerticalAlignment="Center"
                               Grid.Column="0"/>
                    
                    <ComboBox x:Name="PortComboBox" 
                              Style="{StaticResource ModernComboBox}"
                              Height="35"
                              Margin="10,0"
                              Grid.Column="1">
                        <ComboBoxItem Content="COM1"/>
                        <ComboBoxItem Content="COM2"/>
                        <ComboBoxItem Content="COM3"/>
                    </ComboBox>
                    
                    <Button Content="扫描设备" 
                            Style="{StaticResource ModernButton}"
                            Height="40"
                            Margin="10,0"
                            Grid.Column="2"
                            Click="ScanDeviceButton_Click"/>
                    
                    <ComboBox x:Name="DeviceComboBox" 
                              Style="{StaticResource ModernComboBox}"
                              Height="35"
                              Margin="10,0"
                              Grid.Column="3">
                        <ComboBoxItem Content="设备1"/>
                        <ComboBoxItem Content="设备2"/>
                    </ComboBox>
                    
                    <Button Content="连接设备" 
                            Style="{StaticResource ModernButton}"
                            Height="40"
                            Margin="10,0"
                            Grid.Column="4"
                            Click="ConnectDeviceButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- 脑电波显示区域 -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="实时脑电波图:" 
                           FontSize="16" 
                           FontWeight="Medium" 
                           Margin="0,0,0,10"/>

                <Border Grid.Row="1" 
                        Background="#2196F3" 
                        CornerRadius="8"
                        Margin="0,10,0,0"
                        Height="300">
                    <Canvas x:Name="BrainwaveCanvas" 
                            Background="Transparent">
                        <!-- 这里可以绘制脑电波图形 -->
                        <TextBlock Text="脑电波实时显示区域" 
                                   Foreground="White" 
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Canvas>
                </Border>
            </Grid>
        </Border>
        
        <!-- 量表输入和报告生成区域 -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- MOCA量表 -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="MOCA量表得分:" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="MocaScoreTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Height="40"/>
                </StackPanel>
                
                <!-- MMSE量表 -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="MMSE量表得分:" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="MmseScoreTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Height="40"/>
                </StackPanel>
                
                <!-- 获取报告按钮 -->
                <Button Content="获取报告" 
                        Style="{StaticResource ModernButton}"
                        Grid.Column="2"
                        Height="45"
                        Margin="20,0,0,0"
                        Click="GetReportButton_Click"/>
            </Grid>
        </Border>
        
        <!-- 返回按钮 -->
        <Button Content="返回" 
                Style="{StaticResource SecondaryButton}"
                Grid.Row="4"
                HorizontalAlignment="Left" 
                Margin="0,20,0,0"
                Click="ReturnButton_Click"/>
    </Grid>
</Window> 