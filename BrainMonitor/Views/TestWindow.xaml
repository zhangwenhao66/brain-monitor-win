<Window x:Class="BrainMirror.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="脑镜BrainMirror - 脑电测试界面" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
        ResizeMode="CanMinimize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 测试者信息显示区域 -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 头像区域 -->
                <Border Grid.Column="0" 
                    Width="70" Height="70"
                    CornerRadius="35"
                    Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                    <ui:FontIcon Glyph="&#xE77B;"
                        FontSize="35"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource SystemControlForegroundChromeWhiteBrush}" />
                </Border>

                <!-- 信息区域 -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource TitleText}"
                        FontSize="18"
                        Margin="0,0,0,8">
                        <Run Text="测试者：" />
                        <Run Text="{Binding CurrentTester.Name}" FontWeight="SemiBold" />
                    </TextBlock>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ID: " 
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CurrentTester.ID}" 
                            Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                            Margin="0,0,25,0"/>
                        
                        <TextBlock Text="性别: " 
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CurrentTester.Gender}" 
                            Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                            Margin="0,0,25,0"/>
                        
                        <TextBlock Text="手机号: " 
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CurrentTester.Phone}"
                            Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 现代化分割线 1 -->
        <Border Grid.Row="0" VerticalAlignment="Bottom" Height="2" Margin="0,0,0,-6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.1"/>
                    <GradientStop Color="#FFA3C7E8" Offset="0.5"/>
                    <GradientStop Color="#FFB3D1F0" Offset="0.9"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- 设备连接区域 -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,8,0,8">
            <StackPanel>
                <TextBlock Text="设备连接" 
                    Style="{StaticResource TitleText}"
                    FontSize="16" 
                    Margin="0,0,0,12"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                        Text="端口:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" 
                        x:Name="PortComboBox" 
                        Style="{StaticResource ModernComboBox}" 
                        Height="35"
                        Margin="0,0,15,0">
                        <ComboBoxItem Content="COM1"/>
                        <ComboBoxItem Content="COM2"/>
                        <ComboBoxItem Content="COM3"/>
                    </ComboBox>
                    
                    <Button Grid.Column="2" 
                        x:Name="ScanDeviceButton"
                        Content="扫描设备" 
                        Style="{StaticResource ModernButton}" 
                        Width="100"
                        Height="35"
                        Margin="0,0,15,0"
                        Click="ScanDeviceButton_Click"/>
                    
                    <TextBlock Grid.Column="3" 
                        Text="设备:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="4" 
                        x:Name="DeviceComboBox" 
                        Style="{StaticResource ModernComboBox}" 
                        Height="35"
                        Margin="0,0,15,0"
                        IsEnabled="False">
                        <ComboBoxItem Content="设备1"/>
                        <ComboBoxItem Content="设备2"/>
                    </ComboBox>
                    
                    <Button Grid.Column="5" 
                        x:Name="ConnectDeviceButton"
                        Content="连接设备" 
                        Style="{StaticResource ModernButton}"
                        Width="100"
                        Height="35"
                        IsEnabled="False"
                        Click="ConnectDeviceButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- 现代化分割线 2 -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" Height="2" Margin="0,0,0,-6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="#FF4A90E2" Offset="0.1"/>
                    <GradientStop Color="#FF0078D4" Offset="0.5"/>
                    <GradientStop Color="#FF4A90E2" Offset="0.9"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <!-- 实时脑电显示区域 -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,8,0,8">
            <StackPanel>
                <TextBlock Text="实时脑电显示" 
                    Style="{StaticResource TitleText}"
                    FontSize="16" 
                    Margin="0,0,0,12"/>
                
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Canvas x:Name="BrainwaveCanvas" 
                        Height="220" 
                        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}" />
                </Border>
            </StackPanel>
        </Border>
        
        <!-- 评分输入区域 -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,8,0,8">
            <StackPanel>
                <TextBlock Text="认知评估" 
                    Style="{StaticResource TitleText}"
                    FontSize="16" 
                    Margin="0,0,0,12"/>
                
                <!-- 评分输入区域 - 居中均匀排布 -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                        Text="MOCA评分:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" 
                        x:Name="MocaScoreTextBox"
                        Style="{StaticResource ModernTextBox}" 
                        ui:ControlHelper.PlaceholderText="0-30分"
                        Height="35"/>
                    
                    <TextBlock Grid.Column="3" 
                        Text="MMSE评分:" 
                        Style="{StaticResource ModernLabel}"
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                    <TextBox Grid.Column="4" 
                        x:Name="MmseScoreTextBox"
                        Style="{StaticResource ModernTextBox}" 
                        ui:ControlHelper.PlaceholderText="0-30分"
                        Height="35"/>
                </Grid>
                
                <!-- 现代化分割线 3 -->
                <Border Height="2" Margin="0,15,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="#FF4A90E2" Offset="0.1"/>
                            <GradientStop Color="#FF0078D4" Offset="0.5"/>
                            <GradientStop Color="#FF4A90E2" Offset="0.9"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- 操作按钮区域 -->
        <StackPanel Grid.Row="4" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="0,20,0,20">
            
            <Button Style="{StaticResource SecondaryButton}"
                Width="120"
                Margin="0,0,15,0"
                Click="ReturnButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE72B;" 
                            FontSize="16" 
                            Margin="0,0,8,0"/>
                        <TextBlock Text="返回"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            
            <Button Style="{StaticResource ModernButton}"
                Width="120"
                Margin="0,0,15,0"
                Click="GetReportButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE8A5;" 
                            FontSize="16" 
                            Margin="0,0,8,0"/>
                        <TextBlock Text="生成"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            
            <Button Style="{StaticResource ModernButton}"
                Width="120"
                Height="40">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE74E;" 
                            FontSize="16" 
                            Margin="0,0,8,0"/>
                        <TextBlock Text="保存数据"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>