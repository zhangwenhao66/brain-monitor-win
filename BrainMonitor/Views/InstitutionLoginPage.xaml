<UserControl x:Class="BrainMonitor.Views.InstitutionLoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="{DynamicResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid Margin="40">
        <Border Style="{StaticResource CardStyle}" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="370">
            <StackPanel Margin="30,30,30,20">
                <!-- 标题 -->
                <TextBlock Text="机构登录" 
                           Style="{StaticResource TitleText}"
                           Margin="0,0,0,30"/>
                
                <!-- 机构ID输入 -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="机构ID" 
                               Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="InstitutionIdTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             ui:ControlHelper.PlaceholderText="请输入机构ID"/>
                </StackPanel>
                
                <!-- 密码输入 -->
                <StackPanel Margin="0,0,0,35">
                    <TextBlock Text="密码" 
                               Style="{StaticResource ModernLabel}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <PasswordBox x:Name="PasswordBox" 
                                     Style="{StaticResource ModernPasswordBox}"
                                     Grid.Column="0"
                                     PasswordChar="●"
                                     ui:ControlHelper.PlaceholderText="请输入密码"
                                     Visibility="Visible"/>
                        
                        <TextBox x:Name="PasswordTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Grid.Column="0"
                                 ui:ControlHelper.PlaceholderText="请输入密码"
                                 Visibility="Collapsed"/>
                        
                        <Button x:Name="TogglePasswordButton"
                                Grid.Column="1"
                                Width="40"
                                Height="40"
                                Margin="8,0,0,0"
                                Style="{DynamicResource DefaultButtonStyle}"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="TogglePasswordButton_Click">
                            <ui:FontIcon x:Name="TogglePasswordIcon" 
                                         Glyph="&#xE7B3;" 
                                         FontSize="16"/>
                        </Button>
                    </Grid>
                </StackPanel>
                

                
                <!-- 隐私协议复选框 -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            Margin="0,0,0,25">
                    <CheckBox x:Name="PrivacyCheckBox" 
                              IsChecked="True" 
                              VerticalAlignment="Center" 
                              Margin="0,0,-90,0"/>
                    <TextBlock Text="数据隐私等协议" 
                               FontSize="14" 
                               VerticalAlignment="Center"
                               Padding="5,0,0,0"/>
                </StackPanel>
                
                <!-- 登录按钮 -->
                <Border Background="#0078D4" 
                        CornerRadius="6" 
                        Width="150" 
                        Height="45"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,20">
                    <Button x:Name="LoginButton"
                            Content="登录" 
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Click="LoginButton_Click"
                            Width="150"
                            Height="45"
                            Cursor="Hand"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>